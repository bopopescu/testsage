#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

# We need to delete the old path, so that there are no leftovers from the
# previous installation, otherwise sympy could get broken (for example by
# importing some local files instead of the standard library ones...)
if [ "$SAGE_ROOT" = "" ]; then
    echo "Please set the SAGE_ROOT variable"
    exit 1
fi
echo "Deleting $SAGE_ROOT/local/lib/python2.x/site-packages/sympy*"
rm -rf $SAGE_ROOT/local/lib/python2.*/site-packages/sympy*

cd src/

# apply upstream fix for sage's Negative Infinity. Remove in the next release.
# https://github.com/asmeurer/sympy/commit/f2760590ce48a22f9ef41eddcadad84987d972c0
patch -p0 < ../patches/sympy-0.7.0-NegInfinity.patch
python setup.py install

# ignore the error above, which doesn't matter

exit 0
