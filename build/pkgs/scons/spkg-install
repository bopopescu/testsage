#!/bin/sh

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cd src/

cp ../patch/ifort.py engine/SCons/Tool

rm -rf $SAGE_LOCAL/lib/scons-0.97

python setup.py install

if [ $? -ne 0 ]; then
    echo "Error installing scons"
    exit 1
fi
